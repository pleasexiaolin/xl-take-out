<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiaolin.mapper.DishFlavorMapper">

    <select id="getByDishId" resultType="com.xiaolin.vo.DishFlavorVO">
        select id, dish_id, name, value
        from dish_flavor
        where dish_id = #{id}
    </select>

    <delete id="batchRemove">
        delete
        from dish_flavor where dish_id in
        <foreach item="dishId" collection="dishIds" separator="," open="(" close=")">
            #{dishId}
        </foreach>
    </delete>
</mapper>