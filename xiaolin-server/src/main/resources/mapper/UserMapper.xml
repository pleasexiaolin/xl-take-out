<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiaolin.mapper.UserMapper">
    <select id="getByOpenid" resultType="com.xiaolin.entity.UserDO">
        select id,
               openid,
               name,
               phone,
               sex,
               id_number,
               avatar,
               create_time
        from user
        where openid = #{openid}
    </select>
</mapper>